<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Stub themes for future modifications! -->
    <style name="AppThemeDark" parent="Theme.AppCompat"/>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light"/>

    <style name="AppThemeLight.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="server_add_item_ll">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="server_add_item_tv">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="server_add_item_et">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLength">30</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="server_add_item_bt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="server_settings_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="server_settings_tv">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="server_settings_et">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
