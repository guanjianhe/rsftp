<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Stub themes for future modifications! -->
    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="spinnerDropDownItemStyle">@style/SpinnerDropItemStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerMenuStyle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light"/>

    <style name="AppThemeLight.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="ThemeSwipeBack" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeTrans" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="NoDisplay" parent="android:Theme.NoDisplay"/>

    <style name="AppThemeFullScreen" parent="android:Theme.Black.NoTitleBar.Fullscreen"/>

    <!--通过这个给我的启发就是还可以去修改其它指定的style中默认的样式-->
    <!--修改默认spinner下拉列表中字体的大小-->
    <style name="SpinnerDropItemStyle" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">14sp</item>
    </style>

    <!--修改默认spinner这个菜单显示的字体的大小-->
    <style name="SpinnerMenuStyle" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="server_add_item_ll">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="server_add_item_tv">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="server_add_item_et">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLength">30</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="server_add_item_bt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="server_settings_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="server_settings_tv">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="server_settings_et">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="dialog_detail_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="dialog_detail_left_tv">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialog_detail_right_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
